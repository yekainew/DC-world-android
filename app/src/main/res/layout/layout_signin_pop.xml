<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@mipmap/bg_signin_pop">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_sign_success"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_pop_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜你获得 0.2 DC"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/dark"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/bt_pop"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="@string/string_sweet_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_pop_corner_bg"/>
</LinearLayout>