<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_topic"
    tools:context=".activity.AssetTransactionDetailsActivity">
    <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/new_bg_asset_jiaoyi_detail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/new_icon_zhuanzhang_ok"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/string_transfer_success"
            android:textSize="16sp"
            android:textColor="#73FFC9"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="- 0.00 TRX"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/string_send_address"
            android:textSize="14sp"
            android:textColor="@color/text999"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/asset_name1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="USDTqweweqweqweqweqweqweqweqweqw"
                android:lines="1"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                />
            <ImageView
                android:id="@+id/copy_address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/new_icon_copy_show"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/string_jieshou"
            android:textSize="14sp"
            android:textColor="@color/text999"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/asset_name2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="USDTqweweqweqweqweqweqweqweqweqw"
                android:lines="1"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                />
            <ImageView
                android:id="@+id/copy_address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/new_icon_copy_show"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:text="@string/string_beizhu"
            android:textSize="14sp"
            android:textColor="@color/text999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:text="转账备注（有就加，无隐藏）"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/item_view1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/string_jiaoyi_hash_"
            android:textSize="14sp"
            android:textColor="@color/text999"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/asset_name3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="USDTqweweqweqweqweqweqweqweqweqw"
                android:lines="1"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                />
            <ImageView
                android:id="@+id/copy_address3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/new_icon_copy_show"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dakai"
                android:layout_marginLeft="25dp"
                android:id="@+id/detail_from_open"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="区块高度"
                android:visibility="gone"
                android:textSize="14sp"
                android:textColor="@color/text999"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/geight"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="26461706"
                    android:lines="1"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/string_jiaoyi_time"
                android:textSize="14sp"
                android:textColor="@color/text999"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="01/04  17:17:30"
                    android:lines="1"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:background="@mipmap/new_bg_wechfang"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/code_tu"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_code"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>