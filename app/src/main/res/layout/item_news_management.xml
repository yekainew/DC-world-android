<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dark"
    android:layout_marginTop="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/head_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:src="@mipmap/icon_user_head1"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="匿名用户"
            android:textSize="14sp"
            android:textColor="@color/font_color_text"
            android:layout_toRightOf="@id/head_img"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核中"
            android:textColor="@color/hint_color_text"
            android:textSize="14sp"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/btn"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:text="撤销发布"
            android:textColor="@color/font_color_blue"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_sift_corner_blue"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_view"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/new_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:lines="1"
        android:textSize="16sp"
        android:textColor="@color/font_color_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/new_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容"
        android:textSize="14sp"
        android:textColor="@color/hint_color_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_img1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="96dp"
            android:src="@mipmap/icon_new_img"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/add_img2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="96dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_new_img"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/add_img3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="96dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_new_img"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/add_img4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="96dp"
            android:src="@mipmap/icon_new_img"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
