<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_topic"
    tools:context=".activity.PoolDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/include_title"/>
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_day_pingjun_suanli"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/hint_color_text"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/pool_details_hashrate"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:text="0.00 GH/S"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/font_color_text"
                    android:textAllCaps="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/dilatationDetail_uid_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/item_view"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_zhiqian_yeild"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/hint_color_text"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/pool_details_yeild"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/font_color_text"
                    android:textAllCaps="true"
                    android:text="0.000 DCC"/>

            </RelativeLayout>
            <View
                android:id="@+id/dilatationDetail_level_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/item_view"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_saunfa"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/hint_color_text"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/pool_details_algorithm"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/font_color_text"
                    android:textAllCaps="true"
                    android:text="SHA256"/>

            </RelativeLayout>
            <View
                android:id="@+id/dilatationDetail_coin_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/item_view"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_kuagji_type"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/hint_color_text"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/pool_details_type"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/font_color_text"
                    android:textAllCaps="true"
                    android:text="DCC矿机"/>

            </RelativeLayout>
            <View
                android:id="@+id/dilatationDetail_sy_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/item_view"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_wakuang_address"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/hint_color_text"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/pool_details_address"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/tab_color_show"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textAllCaps="true"
                    android:text="https://huaban.com/"/>

            </RelativeLayout>
            <View
                android:id="@+id/dilatationDetail_all_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/item_view"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="40dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_quanwang_suanli"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/hint_color_text"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/pool_details_all_hashrate"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/font_color_text"
                    android:textAllCaps="true"
                    android:text="0.00 GH/S"/>

            </RelativeLayout>
            <View
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:visibility="gone"
                android:background="@color/item_view" />
            <RelativeLayout
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="40dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_kuangchi_suanli"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/hint_color_text"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/pool_details_pool_hashrate"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 TH/S"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/font_color_text"
                    android:textAllCaps="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:visibility="gone"
                android:background="@color/item_view"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>