<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SignInActivity">
    <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_sign"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_sign_lianxi"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textColor="@color/font_color_text"/>
            <TextView
                android:id="@+id/my_yield"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:paddingRight="8dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_sign"
                android:text="@string/string_my_yeild"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/icon_sign_right"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:background="@drawable/bg_sign_day">
            <TextView
                android:id="@+id/day_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_day"
                android:textColor="@color/font_color_text"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/relative7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/btn_ture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/signin_shape1"
            android:text="@string/string_liji_sign"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/dark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_huodong_guize"
            android:textSize="14sp"
            android:textColor="@color/font_color_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/string_guize_text"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/hint_color_text"/>
    </LinearLayout>
</LinearLayout>