<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="20dp"
    android:background="@mipmap/new_bg_assect_item"
    android:orientation="horizontal"
    android:gravity="top">

    <ImageView
        android:layout_width="45dp"
        android:layout_marginTop="@dimen/corner_20"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/asset_item_iv"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USDT"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:shadowRadius="5"
            android:shadowDx="0"
            android:shadowDy="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USDTTTT"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="5dp"
            android:textColor="@color/text666"
            android:id="@+id/asset_item_tv"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="right">
        <TextView
            android:id="@+id/asset_usable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00000"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/font_color_text"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:shadowColor="@color/white"/>
        <TextView
            android:id="@+id/asset_freeze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00000"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/font_color_text"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/asset_equivalent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0.00000 USDT"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text666"
            android:lines="1"
            android:ellipsize="end"
            android:shadowColor="@color/white"/>
    </LinearLayout>

</LinearLayout>

