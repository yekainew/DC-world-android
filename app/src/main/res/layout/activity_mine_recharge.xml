<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_topic"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark"
        android:orientation="vertical">

        <com.jkkg.hhtx.widget.tablayout.CommonTabLayout
            android:id="@+id/commontab_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            app:tl_indicator_height="0dp"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/tab_color_show"
            app:tl_textUnselectColor="@color/hint_color_text"
            app:tl_textsize="@dimen/sp_14"
            app:tl_underline_height="0dp" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@mipmap/icon_soukuang"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="@string/string_chongbi_ercode"
                    android:textColor="@color/font_color_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_qr_code1"
                    android:layout_width="210dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/bg_write" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/string_chongbi_address1"
                    android:textColor="@color/font_color_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="45dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/recharge_address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3e8e612c9a452725939f890275..."
                        android:textColor="@color/show_text"
                        android:textSize="11sp"
                        />

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:src="@mipmap/icon_copy_sk"
                        android:layout_marginLeft="@dimen/corner_20"
                        android:id="@+id/btn_copy1"
                        />
                </LinearLayout>


               <!-- <TextView
                    android:id="@+id/recharge_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/new_button_exitview"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text=" "
                    android:textColor="@color/hint_color_text"
                    android:textSize="14sp"
                    android:visibility="gone" />-->
<!--

                <Button
                    android:id="@+id/btn_copy1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="40dp"
                    android:background="@mipmap/new_bg_button"
                    android:text="@string/string_copy_address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />
-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/string_good_tip"
                    android:textColor="@color/font_color_text"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="40dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/string_chongbi_tip"
                    android:textColor="@color/hint_color_text"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>