<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NewPoolFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_new_pool"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_newpool_diqiu"
        android:layout_centerInParent="true"/>
    <com.jkkg.hhtx.utils.EnergyTree
        android:id="@+id/custom_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="@string/string_tab_sift"
        android:textColor="@color/font_color_text"
        android:textSize="18sp" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/icon_new_pool_btnget"
        android:id="@+id/img_shouqu"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_suanli"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_sift_corner1"
            android:text="@string/string_pool_suanli"
            android:textColor="@color/font_color_blue"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_zonglan"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_sift_corner1"
            android:text="@string/string_pool_zonglan"
            android:textColor="@color/font_color_blue"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_reward"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_sift_corner1"
            android:text="@string/string_pool_reward"
            android:textColor="@color/font_color_blue"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_mypool"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@drawable/update_btn_shape"
            android:text="@string/string_my_pool"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_mingxi"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@drawable/bg_sift_corner1"
            android:text="@string/string_pool_mingxi"
            android:textColor="@color/font_color_blue" />
    </LinearLayout>

</RelativeLayout>