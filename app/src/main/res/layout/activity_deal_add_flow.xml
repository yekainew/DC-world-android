<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_pic"
    android:orientation="vertical"
    tools:context=".activity.DealAddFlowActivity">
    <include layout="@layout/include_title"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/bg_tab"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:background="@mipmap/new_bg_deal_jiaoyi_yuan"
                            android:orientation="vertical"
                            android:padding="14dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="@string/string_edit"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="right"
                                    android:layout_alignParentRight="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_jine_"
                                        android:textColor="@color/hint_color_text"
                                        android:textSize="14sp" />
                                    <TextView
                                        android:id="@+id/jine"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:lines="1"
                                        android:ellipsize="end"
                                        android:textColor="@color/show_text"
                                        android:textSize="14sp" />
                                </LinearLayout>


                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.jkkg.hhtx.widget.ClearEditText
                                    android:id="@+id/edit_num"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:digits="1234567890."
                                    android:hint="@string/string_shuru_num"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/font_color_text"
                                    android:textColorHint="@color/hint_color_text"
                                    android:textSize="@dimen/sp_14" />


                                <TextView
                                    android:id="@+id/edit_max"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginRight="20dp"
                                    android:text="@string/string_max"
                                    android:textColor="@color/show_text"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/choose_bi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:drawableLeft="@mipmap/icon_usdt"
                                    android:drawablePadding="4dp"
                                    android:text="TRX"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:src="@mipmap/new_icon_deal_down" />
                            </LinearLayout>
                        </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:src="@mipmap/new_icon_deal_add" />

                        <TextView
                            android:id="@+id/gaoji_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/string_gaojiset"
                            android:textColor="@color/show_text"
                            android:textSize="12sp" />
                    </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@mipmap/new_bg_deal_jiaoyi_yuan"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:padding="14dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="@string/string_edit"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="right"
                                    android:layout_alignParentRight="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_jine_"
                                        android:textColor="@color/hint_color_text"
                                        android:textSize="14sp" />
                                    <TextView
                                        android:id="@+id/daibi_jine"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:lines="1"
                                        android:ellipsize="end"
                                        android:textColor="@color/show_text"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.jkkg.hhtx.widget.ClearEditText
                                    android:id="@+id/edit_num2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:digits="1234567890."
                                    android:hint="@string/string_shuru_num"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/font_color_text"
                                    android:textColorHint="@color/hint_color_text"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    android:id="@+id/edit_max2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginRight="20dp"
                                    android:text="@string/string_max"
                                    android:textColor="@color/show_text"
                                    android:textSize="14sp" />
                                <TextView
                                    android:id="@+id/choose_daibi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:text="@string/string_choose_daibi"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/new_icon_deal_down" />
                            </LinearLayout>
                        </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/string_look_tongzheng"
                                android:textColor="@color/font_color_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/show_daibi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="TRX WIN"
                                android:textColor="@color/show_text"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_zhe"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:src="@color/white" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/string_price_fene"
                        android:textColor="@color/font_color_text"
                        android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:background="@mipmap/new_bg_deal_jiaoyi_yuan"
                            android:gravity="center_vertical"
                            android:padding="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="@string/string_usde_trx"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="@string/string_trx_usdt"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="@string/string_deal_privoie_fene"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="2dp">

                                <TextView
                                    android:id="@+id/exchange_trx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="0.00"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/exchange_usdt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="0.00"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/deal_fene"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="0.00"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                        </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/string_your_cangwei"
                        android:textColor="@color/font_color_text"
                        android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:background="@mipmap/new_bg_deal_jiaoyi_yuan"
                            android:padding="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="TRX"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="USDT"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="@string/string_pool_daibi"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="2dp">

                                <TextView
                                    android:id="@+id/trx_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="0.00"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/usdt_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="0.00"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/deal_daibi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="0.00"
                                    android:textColor="@color/font_color_text"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_shuru_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/new_bg_button"
                        android:text="@string/string_shuru_num"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/sp_14"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/new_bg_button"
                        android:text="@string/string_tigong"
                        android:textColor="@color/show_text"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>