<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/dark">
    <RelativeLayout
        android:id="@+id/rl_invite"
        android:layout_width="280dp"
        android:layout_height="500dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/new_bg_invite"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="54dp"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/download_app"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/string_dialog_invite_app"
                    android:lines="1"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_view" />
    <LinearLayout
        android:id="@+id/sweet_dialog_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/dialog_left_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/string_sweet_cancle"
            android:textColor="@color/font_color_text"
            android:textSize="@dimen/sp_16" />
        <View
            android:id="@+id/dialog_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/item_view" />
        <TextView
            android:id="@+id/dialog_right_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/string_save_image"
            android:textColor="@color/show_text"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</LinearLayout>
