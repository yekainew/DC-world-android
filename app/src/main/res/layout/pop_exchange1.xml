<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:background="@mipmap/new_pop_bg_exchange">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_jiaoyi_delate"
            android:textSize="18sp"
            android:textColor="@color/font_color_text"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/exchange_record"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_view"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/price_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="1 TRX"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/font_color_text"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_fukuan_address"
            android:textSize="14sp"
            android:textColor="@color/font_color_text"
            />
        <TextView
            android:id="@+id/usdt_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="0.00srgtergijreghkjfhgkdjfhgkdhfgskdghsdfgsedfgsdf USDT"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/font_color_text"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_shoukuan_address"
            android:textSize="14sp"
            android:textColor="@color/font_color_text"
            />
        <TextView
            android:id="@+id/dc_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="0.00 USDT位234523452345234523452342345234523452345"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/font_color_text"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_ture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/new_btn"
        android:text="@string/string_sure_zhifu"
        android:textStyle="bold"
        android:textColor="@color/show_text"
        android:textSize="@dimen/sp_14" />
</LinearLayout>
