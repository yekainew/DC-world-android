<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TransferFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/string_transfer_id"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/font_color_text"/>
        <com.jkkg.hhtx.widget.ClearEditText
            android:id="@+id/transfer_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:background="@color/colorPrimary"
            android:hint="@string/string_edit_duifang_phone"
            android:digits="0123456789"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/font_color_text"
            android:textColorHint="@color/hint_color_text"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/transfer_yue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="DC余额：0.00"
            android:lines="1"
            android:textColor="@color/hint_color_text"
            android:textSize="12sp"
            android:gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/string_transfer_money"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/font_color_text"/>
        <com.jkkg.hhtx.widget.ClearEditText
            android:id="@+id/transfer_num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:background="@color/colorPrimary"
            android:hint="请输入转账数量"
            android:digits="0123456789"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/font_color_text"
            android:textColorHint="@color/hint_color_text"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="验证码"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/font_color_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <com.jkkg.hhtx.widget.ClearEditText
                android:id="@+id/transfer_phone_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/font_color_text"
                android:textColorHint="@color/hint_color_text"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="验证码区分大小写"
            android:lines="1"
            android:textColor="@color/hint_color_text"
            android:textSize="12sp"
            android:gravity="right"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换手续费："
                android:textSize="@dimen/sp_14"
                android:textColor="@color/hint_color_text"/>
            <TextView
                android:id="@+id/transfer_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 %"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/font_color_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最低兑换数量："
                android:textSize="@dimen/sp_14"
                android:textColor="@color/hint_color_text"/>
            <TextView
                android:id="@+id/transfer_min_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/font_color_text"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_sift_corner"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


</FrameLayout>