<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_sweet_dialog"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="@string/string_sweet_title"
            android:textColor="@color/font_color_text"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:visibility="visible" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="20dp" >
            <FrameLayout
                android:id="@+id/tv_dialog_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_dialog_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/font_color_text"
                android:textSize="@dimen/sp_14" />
        </FrameLayout>

        <View
            android:id="@+id/sweet_dialog_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/item_view" />

        <LinearLayout
            android:id="@+id/sweet_dialog_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/dialog_left_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/string_sweet_cancle"
                android:textColor="@color/font_color_text"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/dialog_line"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/item_view" />

            <TextView
                android:id="@+id/dialog_right_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/string_sweet_confirm"
                android:textColor="@color/show_text"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
