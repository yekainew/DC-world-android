<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_topic"
    android:orientation="vertical">

    <include layout="@layout/include_title" />


    <RelativeLayout
        android:id="@+id/sysytem_change_language"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/string_change_langage"
            android:textColor="@color/font_color_text"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/sysytem_change_language_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:lines="1"
            android:text="@string/string_text_china"
            android:textColor="@color/font_color_text"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_view" />

    <TextView
        android:id="@+id/syatem_notice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark"
        android:drawableRight="@mipmap/icon_self_right"
        android:drawablePadding="14dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/string_syatem_notice"
        android:textColor="@color/font_color_text"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_view" />

    <RelativeLayout
        android:id="@+id/system_version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/string_system_version"
            android:textColor="@color/font_color_text"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/system_version_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:lines="1"
            android:text="v1.0.0"
            android:textColor="@color/font_color_text"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_view" />

</LinearLayout>