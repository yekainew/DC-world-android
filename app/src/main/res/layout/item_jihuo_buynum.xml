<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@mipmap/new_bg_jihuo_item"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/time_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0000-00-00"
                android:textColor="@color/show_text"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/time_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:text="00:00:00"
                android:textColor="@color/hint_color_text"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/jihuo_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/show_text"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/jihuo_xiaohao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/show_text"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/jihuo_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="成功"
            android:textColor="@color/green"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>