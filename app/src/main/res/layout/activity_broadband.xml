<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121516"
    android:orientation="vertical"
    tools:context=".activity.BroadbandActivity">
    <include layout="@layout/include_title"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="30dp"
        android:background="@mipmap/bg_broadband_kapian">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_kuandai"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/broadband_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 KB/TRX"
                android:textSize="16sp"
                android:textColor="@color/text666"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <com.liys.view.LineProView
                android:id="@+id/broadband_linpro"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:progress_color="#73F4FF"
                app:progress_color_background="#121516"
                app:progress_max="100"
                app:progress_radius="18dp"
                app:progress_value="30"
                app:radius="18dp" />

            <TextView
                android:id="@+id/broadband_available"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="可用：4.88 KB/10.00 KB"
                android:textSize="16sp"
                android:textColor="@color/text666"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_freeze"
                android:textSize="16sp"
                android:textColor="@color/font_color_text"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/broadband_oneself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自己：0 TRX"
                android:textSize="16sp"
                android:textColor="@color/text666"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/broadband_trx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 TRX"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#73F4FF"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/broadband_herself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="他人：0 TRX"
                android:textSize="16sp"
                android:textColor="@color/text666"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@mipmap/bg_broadband_kapian">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_nengliang"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/energy_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 KB/TRX"
                android:textSize="16sp"
                android:textColor="@color/text666"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

        <com.liys.view.LineProView
            android:id="@+id/energy_linpro"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            app:progress_max="100"
            app:progress_value="80"
            app:progress_color="#73F4FF"
            app:progress_color_background="#121516"
            app:progress_radius="18dp"
            app:radius="18dp"
            />

            <TextView
                android:id="@+id/energy_available"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="可用：4.88 KB/4.88 KB"
                android:textSize="16sp"
                android:textColor="@color/text666"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_freeze"
                android:textSize="16sp"
                android:textColor="@color/font_color_text"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/energy_oneself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自己：3 TRX(可解冻)"
                android:textSize="16sp"
                android:textColor="@color/text666"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/energy_trx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 TRX"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#73F4FF"
                android:layout_alignParentLeft="true"/>
            <TextView

                android:id="@+id/energy_herself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="他人：0 TRX"
                android:textSize="16sp"
                android:textColor="@color/text666"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="30dp"
        android:background="@mipmap/bg_broadband_kapian">
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:background="@mipmap/bg_broadband_tab_down">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bg_broadband_tab_up"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="36dp"
                android:text="@string/string_freeze"
                android:textSize="16sp"
                android:textColor="@color/text333" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="@string/string_jied"
                android:textSize="16sp"
                android:textColor="@color/text333" />
        </RelativeLayout>
        <include layout="@layout/item_broadband1"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/button_broadand"
        android:text="@string/string_sweet_confirm"
        android:textColor="@color/text333"
        android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>