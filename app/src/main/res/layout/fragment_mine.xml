<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121516"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/new_bg_mine_up"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp">
                <ImageView
                    android:id="@+id/mine_saoma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:src="@mipmap/new_icon_saoma"/>
                <ImageView
                    android:id="@+id/mine_qiandao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/new_icon_qiandao"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_mine_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/new_icon_mine_hand"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_mine_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="钱包名"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/jiedian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_sift_corner_jiedian"
                            android:text="@string/string_jiedian1"
                            android:padding="4dp"
                            android:textColor="@color/text333"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_mine_activate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="未激活"
                        android:textColor="#FF7383"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:background="@mipmap/new_bg_mine_up2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mine_common_tab12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/new_icon_mine_up1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/string_price_all"
                        android:textColor="@color/tab_color_show"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_common_tab10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/new_icon_mine_up2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/string_mine_address_book"
                        android:textColor="@color/tab_color_show"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_guanli_wallet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/new_icon_mine_up3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/string_guanli_wallet"
                        android:textColor="@color/tab_color_show"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_common_tab2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/new_icon_mine_up4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/string_mine_common4"
                        android:textColor="@color/tab_color_show"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/mine_common_tab1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@mipmap/new_bg_item"
                    android:drawableRight="@mipmap/new_icon_right"
                    android:drawablePadding="14dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/string_mine_shequ"
                    android:textColor="@color/font_color_text"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/mine_common_beifen_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@mipmap/new_bg_item"
                    android:drawableRight="@mipmap/new_icon_right"
                    android:drawablePadding="14dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/string_safe_wallet"
                    android:textColor="@color/font_color_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mine_common_tab4"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@mipmap/new_bg_item"
                    android:drawableRight="@mipmap/new_icon_right"
                    android:drawablePadding="14dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/string_jihuo"
                    android:textColor="@color/font_color_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mine_common_tab5"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@mipmap/new_bg_item"
                    android:drawableRight="@mipmap/new_icon_right"
                    android:drawablePadding="14dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/string_dialog_invite"
                    android:textColor="@color/font_color_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mine_common_tab6"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@mipmap/new_bg_item"
                    android:drawableRight="@mipmap/new_icon_right"
                    android:drawablePadding="14dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/string_syatem_notice"
                    android:textColor="@color/font_color_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mine_common_tab11"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@mipmap/new_bg_item"
                    android:drawableRight="@mipmap/new_icon_right"
                    android:drawablePadding="14dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/string_xitong_set"
                    android:textColor="@color/font_color_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mine_common_tab7"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@mipmap/new_bg_item"
                    android:drawableRight="@mipmap/new_icon_right"
                    android:drawablePadding="14dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/string_new_management"
                    android:textColor="@color/font_color_text"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/lin_about"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@mipmap/new_bg_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <TextView
                        android:id="@+id/mine_common_tab8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawablePadding="14dp"
                        android:gravity="center_vertical"
                        android:text="@string/string_mine_about_user"
                        android:textColor="@color/font_color_text"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_mine_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="v 1.0.0"
                        android:textColor="@color/hint_color_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mine_common_tab9"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="20dp"
                    android:background="@mipmap/new_bg_item"
                    android:drawableRight="@mipmap/new_icon_right"
                    android:drawablePadding="14dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/string_mine_help"
                    android:textColor="@color/font_color_text"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</LinearLayout>