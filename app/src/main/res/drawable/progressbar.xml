<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="5dip" />

            <gradient
                android:angle="0"
                android:centerColor="#38424D"
                android:centerY="0.75"
                android:endColor="#38424D"
                android:startColor="#38424D" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip>

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="#296BD2"
                    android:centerY="0.75"
                    android:endColor="#296BD2"
                    android:startColor="#296BD2" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:endColor="#296BD2"
                    android:startColor="#296BD2" />
            </shape>
        </clip>
    </item>

</layer-list>